# Application
APP_NAME=Univer Report System
APP_ENV=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./data/app.db

# Email Configuration (for OTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@company.com
SMTP_FROM_NAME=Univer Report System

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=1440  # minutes (24 hours)

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRATION=300  # seconds (5 minutes)
OTP_MAX_ATTEMPTS=3

# Allowed Email Domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=company.com,company.co.th,example.com

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com
CORS_ALLOW_CREDENTIALS=True

# Data Files
PROFIT_LOSS_CSV=./data/profit_loss.csv
OTHER_INCOME_EXPENSE_CSV=./data/other_income_expense.csv

# Cache Configuration
ENABLE_CACHE=True
CACHE_TTL=3600  # seconds (1 hour)

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
