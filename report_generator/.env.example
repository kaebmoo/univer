# =============================================================================
# Univer Report Generator - Environment Configuration
# =============================================================================
# คัดลอกไฟล์นี้เป็น .env และปรับแต่งตามต้องการ
# cp .env.example .env
# =============================================================================

# === Application ===
APP_NAME="Univer Report Generator"
APP_ENV=development          # development หรือ production
DEBUG=True

# === Data Paths ===
# Directory ของไฟล์ CSV input (relative หรือ absolute path)
DATA_DIR=data

# Directory สำหรับไฟล์ output Excel
OUTPUT_DIR=output

# === CSV Configuration ===
# Encoding สำหรับอ่านไฟล์ CSV จาก SAP
# Options: tis-620, windows-874, cp874, utf-8
CSV_ENCODING=tis-620

# === Excel Formatting ===
# ฟอนต์ที่ใช้ในรายงาน Excel (ต้องติดตั้งในเครื่อง)
EXCEL_FONT_NAME=TH Sarabun New

# ขนาดฟอนต์ต่างๆ
EXCEL_FONT_SIZE=18
EXCEL_HEADER_FONT_SIZE=18
EXCEL_REMARK_FONT_SIZE=14

# === Web Server (สำหรับ web mode) ===
WEB_HOST=0.0.0.0
WEB_PORT=9000

# === Email Configuration (SMTP) ===
# สำหรับส่ง OTP และ notifications
SMTP_SERVER=mail.ntplc.co.th
SMTP_PORT=587                 # 587 สำหรับ TLS, 465 สำหรับ SSL
SMTP_USERNAME=user@ntplc.co.th
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=noreply@ntplc.co.th
SMTP_FROM_NAME=Univer Report System
SMTP_USE_SSL=True

# === JWT Configuration ===
# สำหรับ authentication (web mode)
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=1440           # minutes (24 hours)

# === OTP Configuration ===
OTP_LENGTH=6
OTP_EXPIRATION=300            # seconds (5 minutes)
OTP_MAX_ATTEMPTS=3

# === Allowed Email Domains ===
# JSON array format - domains ที่อนุญาตให้ login
# ALLOWED_EMAIL_DOMAINS=["ntplc.co.th", "company.com"]

# === Logging ===
LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/app.log
