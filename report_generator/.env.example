# Application
APP_NAME="Univer Report Generator"
APP_ENV=development  # development or production
DEBUG=True

# Server
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Data paths
DATA_DIR=../data
OUTPUT_DIR=./output

# CSV Encoding (Thai)
CSV_ENCODING=tis-620  # or windows-874, cp874

# Excel formatting
EXCEL_FONT_NAME=TH Sarabun New
EXCEL_FONT_SIZE=18

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@company.com
SMTP_FROM_NAME=Univer Report System
SMTP_USE_SSL=True

# JWT Configuration
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=1440  # minutes (24 hours)

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRATION=300  # seconds (5 minutes)
OTP_MAX_ATTEMPTS=3

# Allowed Email Domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=company.com,company.co.th

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
